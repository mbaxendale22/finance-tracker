<div class="flex flex-col bg-slate-100 rounded-lg shadow-lg h-3/4 w-full justify-evenly items-center">
  <h2 class="text-center font-semibold ">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex rounded text-gray-500 mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "outline-none px-4 h-full py-2 text-lg",
        placeholder: "email address"
      %>
    </div>
    <div class="field flex rounded text-gray-500 mb-4
">
      <%= f.password_field :password, autocomplete: "current-password", class: "outline-none px-4 h-full py-2 text-lg", placeholder: "password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", class: "rounded mt-6 px-4 py-2 bg-slate-200 shadow-sm" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
